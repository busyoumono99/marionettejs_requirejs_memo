doctype html
html(lang="ja")
 head
  meta(charset="utf-8")
  meta(name="viewport", content="width=device=width, initial-scal=1.0")
  meta(name="description", content="Marionettejs Memo Application")
  //- style(src="css/style.css")
  title Marionettejs - Memo
  link(rel="stylesheet", type="text/css", href="bower_components/bootstrap/dist/css/bootstrap.css")
 body
  nav.navbar.navbar-default(role='navigation')
    .container-fluid
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Backbone - Memo
      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a.create.btn.btn-default(href="#")
              span.glyphicon.glyphicon-plus
      // /.navbar-collapse
    // /.container-fluid
  div.container
    form#editForm.form-horizontal(role='form', style="display:none;")
      .form-group
        label.col-sm-2.control-label(for='js-title') Title
        .col-sm-9
          input#js-title.form-control(type='text', placeholder='Title')
      .form-group
        label.col-sm-2.control-label(for='js-content') Content
        .col-sm-9
          input#js-content.form-control(type='text', placeholder='Content')
      .form-group
        .col-sm-offset-4.col-sm-8
          .btn-group
            button#saveBtn.btn.btn-primary(type='button')
              span.glyphicon.glyphicon-floppy-disk  Save
            button#cancelBtn.btn.btn-default(type='button')
              span.glyphicon.glyphicon-eject  Cancel
    table#memoList.table.table-hover.table-bordered
      tr
        th.col-sm-2 Title
        th.col-sm-9 Content
        th.col-sm-1 Func


  script(type="text/javascript", src="bower_components/requirejs/require.js", data-main="js/main")
